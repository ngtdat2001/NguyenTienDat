@model IEnumerable<NguyenTienDat.Models.Rubik>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="row">
    @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel panel-heading">
                            <strong>@item.ten</strong>
                        </div>
                        <div class="panel-body">
                            <p><strong>Loai: </strong>@item.maloai</p>
                            <p><strong>Mo ta: </strong>@item.mota</p>
                            <p><strong>Hang: </strong>@item.hang</p>
                            <p><strong>Gia: </strong>@item.gia</p>
                            <p><img src="@item.hinh" alt="hinh thumbnail" /></p>
                            <p><strong>Con lai: </strong>@item.soluongton</p>
                            <p><strong>Ngay cap nhat: </strong>@item.ngaycapnhat</p>
                        </div>
                        <div class="panel-footer clearfix">
                            <div class="pull-right">
                                <div class="DatMua">
                                    <a class="btn btn-success" href="@Url.Action("ThemGioHang","GioHang",new {@id=item.id, @strURL = Request.Url.ToString()})">Dat Mua</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
</div>
